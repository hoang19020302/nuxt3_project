{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": false,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "types": [
            "@types/node",
            "@nuxt/types"
        ]
    },
    "exclude": [
        "node_modules",
        "env_config.js"
    ],
    "include": [
        "./**/*.ts",
        "./**/*.vue"
    ],
}
